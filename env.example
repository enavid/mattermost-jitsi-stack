# ==========================================
# Mattermost + Jitsi Configuration
# ==========================================

# Domains
MATTERMOST_DOMAIN=https://chat.yourdomain.com
JITSI_DOMAIN=https://meet.yourdomain.com

# Your server's public IP address
DOCKER_HOST_ADDRESS=YOUR_SERVER_PUBLIC_IP

# PostgreSQL
POSTGRES_PASSWORD=ChangeMe_Strong_Password_123

# SMTP Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FEEDBACK_EMAIL=support@yourdomain.com

# Jitsi Secrets (generate strong random passwords)
JICOFO_COMPONENT_SECRET=ChangeMe_Random_Secret_1
JICOFO_AUTH_PASSWORD=ChangeMe_Random_Secret_2
JVB_AUTH_PASSWORD=ChangeMe_Random_Secret_3

